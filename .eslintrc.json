{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": [2, "always"],
    "quotes": [2, "double"],
    "comma-dangle": 0,
    "no-unused-vars": 0,
    "space-before-function-paren": 0,
    "no-useless-escape": 0,
    "curly": 0
  }
}
